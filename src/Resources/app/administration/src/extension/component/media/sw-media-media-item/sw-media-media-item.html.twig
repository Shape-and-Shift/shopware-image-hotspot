{% block sw_media_media_item_context_item_rename_item %}
    <sw-context-menu-item
        v-if="item.mediaType && item.mediaType.name === 'IMAGE'"
        @click="onShowHotspotModal">
        {{ $tc('sas-image-hotspot-map.general.setHotspot') }}
    </sw-context-menu-item>

    {% parent %}
{% endblock %}


{% block sw_media_media_item_move_modal %}
    <sas-image-hotspot-modal
        v-if="showHotspotModal && item.id"
        :media="item"
        @on-close-hotspot-modal="onCloseHotspotModal" />

    {% parent %}
{% endblock %}
